<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.app.market_street">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />

    <application
        android:name=".share.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RickTech"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">
        <activity android:name=".uis.activity_login.ClientLoginActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".uis.activity_seconed_hand_market_filter.SeconedHandMarketFilterActivity"
            android:configChanges="keyboardHidden|screenSize|orientation"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".uis.activity_map.MapActivity"
            android:configChanges="keyboardHidden|screenSize|orientation"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".uis.activity_add_products.AddProductActivity"
            android:configChanges="keyboardHidden|screenSize|orientation"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".uis.activity_home.HomeActivity"
            android:configChanges="keyboardHidden|screenSize|orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".uis.activity_splash.SplashActivity">

        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/mdtp_deleted_key" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>